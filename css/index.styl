.u-center_wrapper
	padding 0 20px
	max-width 640px
	margin-left auto
	margin-right auto

.Main
	padding-top 5em
	padding-left 50%

.Post
	background-color #fff
	border-bottom 1px solid Post_borde
	padding 120px 0
	margin-bottom 4em
	position relative
	transition all .3s ease-in-out
	z-index 3
	&:after
		content " "
		position absolute
		z-index 2
		top 50%
		margin-top -15px
		margin-right -15px
		border-top 15px solid transparent
		border-bottom 15px solid transparent
		border-right 15px solid #fff
		opacity 0
	&-animar
		&:after
			left -15px
			opacity 1
		.Post
			&-imagen
				opacity 1
				z-index 1
				left 0
	&:first-child
		margin-top 3.5em
	&-comments
		list-style none
		padding-left 0
	&-encabezado
		position relative
	&-usuario_link
		color Post_usuario
		font-size 2.5em
		text-decoration none
	&-perfil, &-usuario, &-timestamp
		display inline-block
		vertical-align bottom
	&-text
		margin-bottom 2em
	&-timestamp
		color Post_timestamp
		position absolute
		right 0
		bottom 0
	&-perfil
		width 4em
		height 4em
		border-radius 50%
	&-imagen
		height 100%
		opacity 0
		margin 0
		width 50%
		left -50%
		position fixed
		transition all .4s ease-in-out
		top 5em
		z-index 0
	&-img
		height 100%
		max-width 100%
		width 100%
	&-comentario-form
		padding .5em 0
	&-comentario-input
		border none
		border-bottom 1px solid Post_borde
		outline transparent
		height 2em
		width 100%
	&-usercomment
		display inline-block
		margin-right 1em
		text-decoration none
		color Post_usuario

